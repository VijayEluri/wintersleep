<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<!--<var name="searchCriteria" class="org.springframework.webflow.samples.booking.SearchCriteria" />-->
	
	<view-state id="users">
		<on-render>
			<evaluate expression="userManagementService.findUsers()" result="viewScope.users" result-type="dataModel" />
		</on-render>
		<transition on="select" to="user">
            <!-- warning: if you use flowScope.user here, the "user" variable conflicts
            with the var="user" variable from the table, and you'll see the same user
            in all the rows of the master table -->
            <set name="flashScope.user" value="users.selectedRow" />
        </transition>
	</view-state>

    <view-state id="user">
        <transition on="cancel" to="users"/>
        <transition on="save" to="users"/>
    </view-state>

    <end-state id="finish" />
	
</flow>