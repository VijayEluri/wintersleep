<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="eater"
          class="org.wintersleep.util.spring.plugin.Eater">
        <property name="fruits">
            <list>
                <!-- this may look verbose, but it actually makes the intention clear -->
            </list>
        </property>
    </bean>

    <bean id="apple"
          class="org.wintersleep.util.spring.plugin.Fruit">
        <constructor-arg value="apple"/>
    </bean>

    <bean id="banana"
          class="org.wintersleep.util.spring.plugin.Fruit">
        <constructor-arg value="banana"/>
    </bean>

    <bean class="org.wintersleep.util.spring.plugin.PluginBeanFactoryPostProcessor">
        <property name="extensionPointBeanName" value="eater"/>
        <property name="extensionPointPropertyName" value="fruits"/>
        <property name="extensionBeanNames">
            <list>
                <value>apple</value>
                <value>banana</value>
            </list>
        </property>
    </bean>

    <!--
    <plugin:extension extensionPoint="eater" property="fruits">
        <value>apple</value>
        <value>banana</value>
    </plugin:extension>
    -->
    
</beans>